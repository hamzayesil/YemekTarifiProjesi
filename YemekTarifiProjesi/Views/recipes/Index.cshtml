@model IEnumerable<YemekTarifiProjesi.Models.Recipe>

<style>
    /* Senin gönderdiğin silme butonu tasarımı */
    .btn-sil-ozel {
        background-color: rgba(220, 53, 69, 0.85); /* Hafif şeffaf kırmızı */
        color: white;
        border: none;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        cursor: pointer;
        transition: 0.3s;
        backdrop-filter: blur(5px); /* Arka planı hafif bulandırır */
    }

        .btn-sil-ozel:hover {
            background-color: rgb(220, 53, 69);
            transform: scale(1.1); /* Üzerine gelince hafif büyür */
        }
</style>

@{
    ViewData["Title"] = "Tarif Listesi";
}

<div class="hero-section" style="background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('https://images.unsplash.com/photo-1504674900247-0877df9cc836?w=1200'); background-size: cover; height: 400px; display: flex; align-items: center; justify-content: center; color: white; text-align: center; border-radius: 0 0 20px 20px; margin-bottom: 40px;">
    <div class="container">
        <h1 class="display-4 fw-bold">Lezzet Dünyası 🍳</h1>
        <p class="lead">Aradığın tüm tarifler burada.</p>
        <a href="/Recipes/Create" class="btn btn-warning btn-lg fw-bold mt-2">+ Yeni Tarif Ekle</a>
    </div>
</div>

<div class="container">
    <h2 class="text-center mb-4 fw-bold">🍽️ Eklenen Tarifler</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var item in Model)
            {
                // Resim Mantığı
                string resimLink = "https://i.ytimg.com/vi/KWE0kdVpcog/hqdefault.jpg";
                if (item.Category == "Çorba") { resimLink = "https://d17wu0fn6x6rgz.cloudfront.net/img/w/tarif/mgt/16_16_11zon-487.webp"; }
                else if (item.Category == "Tatlı") { resimLink = "https://pimedya.com/images/gorseller/fistikli-baklava-porsiyon.jpg"; }

                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow border-0 overflow-hidden">

                        <div style="position: relative;">
                            <img src="@resimLink" class="card-img-top" style="height: 200px; object-fit: cover;">

                            <form asp-action="Sil" asp-route-id="@item.Id" method="post"
                                  onsubmit="return confirm('Bu tarifi silmek istediğinize emin misiniz?');"
                                  style="position: absolute; bottom: 10px; right: 10px; margin: 0;">
                                <button type="submit" class="btn btn-danger btn-sm shadow"
                                        style="border-radius: 20px; padding: 5px 15px; background-color: rgba(220, 53, 69, 0.9); border: none;">
                                    <i class="fa fa-trash"></i> Sil
                                </button>
                            </form>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title fw-bold">@item.Name</h5>
                            <span class="badge bg-warning text-dark mb-2">@item.Category</span>
                            <p class="card-text text-muted small">
                                @(item.Instructions != null && item.Instructions.Length > 80 ? item.Instructions.Substring(0, 77) + "..." : item.Instructions)
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            <h4>Henüz hiç tarif yok! 😔</h4>
            <p>Veritabanı sıfırlandı. İlk tarifi sen ekle!</p>
        </div>
    }
</div>