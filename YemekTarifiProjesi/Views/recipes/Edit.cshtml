@model YemekTarifiProjesi.Models.Recipe

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6 border p-4 shadow-sm">
            <h2 class="text-center mb-4 text-warning">Tarifi Düzenle</h2>
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Category" class="control-label"></label>
                    <input asp-for="Category" class="form-control" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Ingredients" class="control-label"></label>
                    <textarea asp-for="Ingredients" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Ingredients" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-warning w-100">Değişiklikleri Kaydet</button>
                    <a asp-action="Index" class="btn btn-secondary w-100 mt-2">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>