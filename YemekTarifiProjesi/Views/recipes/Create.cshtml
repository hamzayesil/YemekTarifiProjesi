@model YemekTarifiProjesi.Models.Recipe

@{
    ViewData["Title"] = "Yeni Tarif Ekle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-warning text-dark">
                    <h3 class="fw-bold mb-0 text-center">🍳 Yeni Tarif Oluştur</h3>
                </div>
                <div class="card-body bg-light">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label fw-bold">Yemek Adı</label>
                            <input asp-for="Name" class="form-control" placeholder="Örn: Karnıyarık" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Category" class="control-label fw-bold">Kategori</label>
                            <select asp-for="Category" class="form-control">
                                <option value="Ana Yemek">Ana Yemek</option>
                                <option value="Çorba">Çorba</option>
                                <option value="Tatlı">Tatlı</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Ingredients" class="control-label fw-bold">Malzemeler</label>
                            <textarea asp-for="Ingredients" class="form-control" rows="4" placeholder="Malzemeleri alt alta yazabilirsiniz..."></textarea>
                            <span asp-validation-for="Ingredients" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Instructions" class="control-label fw-bold">Hazırlanışı</label>
                            <textarea asp-for="Instructions" class="form-control" rows="6" placeholder="Yemeğin yapılışını anlatın..."></textarea>
                            <span asp-validation-for="Instructions" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <input type="submit" value="Tarifi Kaydet" class="btn btn-warning fw-bold shadow-sm" />
                            <a asp-action="Index" class="btn btn-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>